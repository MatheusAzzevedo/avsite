# ===========================================
# CONFIGURAÇÕES DO AMBIENTE - AVORAR API
# ===========================================

# Ambiente (development, production)
NODE_ENV=development

# Porta do servidor
PORT=3001

# ===========================================
# BANCO DE DADOS POSTGRESQL
# ===========================================

# URL de conexão do PostgreSQL
DATABASE_URL="postgresql://usuario:senha@host:porta/database"

# ===========================================
# AUTENTICAÇÃO JWT
# ===========================================

# Chave secreta para JWT (use uma chave forte e única)
JWT_SECRET="sua-chave-secreta-aqui"
JWT_EXPIRES_IN="7d"

# ===========================================
# CORS E FRONTEND
# ===========================================

# URLs permitidas (separadas por vírgula)
CORS_ORIGINS="http://localhost:3000"

# URL do frontend (para redirects OAuth)
FRONTEND_URL="http://localhost:3000"

# ===========================================
# UPLOAD DE ARQUIVOS
# ===========================================

# Tamanho máximo de upload (em bytes) - 10MB
MAX_FILE_SIZE=10485760

# Tipos de arquivo permitidos
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,image/gif"

# ===========================================
# API
# ===========================================

# URL base da API
API_BASE_URL="http://localhost:3001"

# ===========================================
# GOOGLE OAUTH (AUTENTICAÇÃO DE CLIENTES)
# ===========================================

# Obtenha suas credenciais em: https://console.cloud.google.com/apis/credentials
# 1. Crie um projeto no Google Cloud Console
# 2. Ative a API "Google+ API" ou "People API"
# 3. Crie credenciais OAuth 2.0
# 4. Adicione URL de redirect autorizada: http://localhost:3001/api/cliente/auth/google/callback

# Client ID do Google OAuth (ex.: criado em Google Cloud Console > APIs e Serviços > Credenciais)
GOOGLE_CLIENT_ID="289440326457-7kk0n180dhkq01luh46j2fog2qdshqvs.apps.googleusercontent.com"

# Client Secret do Google OAuth
GOOGLE_CLIENT_SECRET="seu-client-secret-aqui"

# URL de redirect após autenticação Google (deve estar em "URIs de redirecionamento autorizados" no Google Cloud Console)
# Produção: https://avoarturismo.up.railway.app/api/cliente/auth/google/callback
GOOGLE_REDIRECT_URI="http://localhost:3001/api/cliente/auth/google/callback"

# ===========================================
# ASAAS (GATEWAY DE PAGAMENTO)
# ===========================================

# API Key do Asaas — deixe vazio aqui; em produção configure no Railway (Variables)
# Obtenha em: https://www.asaas.com/config/api
ASAAS_API_KEY=""

# Ambiente (sandbox ou production)
ASAAS_ENVIRONMENT="production"

# URL do webhook (onde Asaas enviará notificações)
# Configure em: https://www.asaas.com/config/webhook
# Exemplo: https://seudominio.com/api/webhooks/asaas
ASAAS_WEBHOOK_URL="https://seudominio.com/api/webhooks/asaas"

# ===========================================
# E-MAIL SMTP (HOSTINGER)
# ===========================================

# Servidor SMTP
SMTP_HOST="smtp.hostinger.com"

# Porta SMTP (465 para SSL, 587 para TLS)
SMTP_PORT="465"

# SSL/TLS (true para porta 465, false para porta 587)
SMTP_SECURE="true"

# Credenciais do e-mail (e-mail completo como usuário)
SMTP_USER="contato@avoarturismo.com.br"
SMTP_PASS="sua-senha-do-email-aqui"

# Remetente exibido nos e-mails
SMTP_FROM_NAME="Avoar Turismo"
SMTP_FROM_EMAIL="contato@avoarturismo.com.br"
